<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Se o arquivo existir na pasta public, use-o
    RewriteCond %{DOCUMENT_ROOT}/public%{REQUEST_URI} -f
    RewriteRule ^(.*)$ public/$1 [L]

    # Caso contr√°rio, mande tudo para o index.php dentro de public
    RewriteRule ^(.*)$ public/index.php [QSA,L]
</IfModule>